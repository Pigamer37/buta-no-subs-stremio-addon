<div>
  <div class="separator"></div>
  <div style="display:flex;flex-direction:column">
    <label class="full-width label-to-top" style="display:block" for="manifest_url">Your manifest
      URL:</label>
    <textarea class="form-element" id="manifest_url" rows="1"
      style="resize:none;overflow:hidden;text-align:center;font-size:unset;"
      readonly>https://buta-no-subs.com/manifest.json</textarea>
    <script>const ta = document.getElementById('manifest_url'); ta.innerText = document.URL + "manifest.json"; ta.style.minHeight = ta.scrollHeight + "px";</script>
  </div>
  <button class="full-width" onclick="{navigator.clipboard.writeText(getElementById('manifest_url').value).then((e)=>{
          console.log('copied!');event.target.innerText='Copied!';setTimeout(function(){
            this.innerText='Copy result to clipboard'
        ;}.bind(event.target), 3000);}).catch((error)=>{console.error(error);})}">
    Copy manifest URL
  </button>
  <a id="installLink" class="install-link" href="#">
    <button tabindex="-1" class="full-width">Open In Stremio</button>
  </a>
  <script>document.getElementById('installLink').href=document.getElementById('manifest_url').value.replace('https://','stremio://')</script>
</div>